{{ form_start(form) }}
    <div class="input-field col s12 l6">
        {{ form_widget(form.name, {'attr': {'class': 'validate'}}) }}
        {{ form_label(form.name, 'Votre nom') }}
    </div>
    <div class="input-field col s12 l6">
        {{ form_widget(form.email, {'attr': {'class': 'validate'}}) }}
        {{ form_label(form.email, 'Votre email') }}
    </div>
    <div class="input-field col s12 l8">
        {{ form_widget(form.title, {'attr': {'class': 'validate'}}) }}
        {{ form_label(form.title, 'Titre de votre campagne') }}
    </div>
    <div class="input-field col s12">
        {{ form_widget(form.content, {'attr': {'id': 'mde-content', 'class': 'materialize-textarea', 'placeholder': 'Décrivez à vos amis pourquoi vous faites une campagne'}}) }}
    </div>
    <div class="input-field col s12 l6">
        {{ form_widget(form.goal, {'attr': {'class': 'validate'}}) }}
        {{ form_label(form.goal, 'Votre objectif en euros') }}
    </div>
    <button class="btn btn-large waves-effect waves-light pink lighten-1 col s12" style="margin-top: 20px;" type="submit" name="action">
        {{ button_label|default('Validez la campagne') }}
        <i class="material-icons right">send</i>
    </button>
{{ form_end(form) }}